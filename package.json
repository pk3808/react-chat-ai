{
  "name": "react-ai-chatbot",
  "version": "1.0.0",
  "description": "A customizable AI chatbot component for React and Next.js",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:js && npm run cleanup:temp",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "webpack --mode production",
    "cleanup:temp": "if exist dist\\temp rmdir /s /q dist\\temp",
    "dev": "webpack serve --mode development",
    "test": "echo \"No test specified\"",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.507.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "keywords": [
    "react",
    "chatbot",
    "ai",
    "ai-chatbot",
    "react-component",
    "nextjs",
    "gemini",
    "openai",
    "customizable"
  ],
  "author": "Piyush",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/react-ai-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/react-ai-chatbot/issues"
  },
 "homepage": "https://github.com/your-username/react-ai-chatbot#readme"
}
